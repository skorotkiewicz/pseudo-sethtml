{
	"name": "pseudo-sethtml",
	"version": "1.1.0",
	"description": "A TypeScript library providing safe HTML parsing and sanitization for React and Node.js",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "jest",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"html",
		"sanitization",
		"xss",
		"security",
		"react",
		"nodejs",
		"typescript"
	],
	"author": "Sebastian Korotkiewicz",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.2.7",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@types/express": "^4.17.0",
		"@types/jest": "^29.5.0",
		"@types/node": "^20.0.0",
		"@types/react": "^18.2.0",
		"jest": "^29.5.0",
		"ts-jest": "^29.1.0",
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"dompurify": "^3.0.0",
		"react": "^18.2.0"
	},
	"peerDependencies": {
		"react": ">=16.8.0"
	}
}
